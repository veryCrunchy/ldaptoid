{
  "name": "@obiente/ldaptoid",
  "version": "1.0.0",
  "description": "LDAP-to-ID proxy - Bridge legacy LDAP clients to modern identity providers",
  "author": "Obiente",
  "license": "MIT",
  "keywords": ["ldap", "identity", "proxy", "keycloak", "zitadel", "entra"],
  "lock": false,

  "exports": {
    ".": "./src/cli/main.ts"
  },

  "tasks": {
    "start": "deno run --allow-net --allow-env src/cli/main.ts",
    "dev": "deno run --allow-net --allow-env --watch src/cli/main.ts",
    "test": "deno test --allow-net --allow-env --fail-fast",
    "test:integration": "deno run --allow-net --allow-env test_integration.ts",
    "check": "deno check src/**/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "build": "deno compile --allow-net --allow-env --output bin/ldaptoid src/cli/main.ts",
    "docker:build": "docker build -t ldaptoid:latest .",
    "docker:run": "docker run --env-file .env -p 389:389 -p 9090:9090 -p 8080:8080 ldaptoid:latest"
  },

  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.22",
    "@std/assert": "jsr:@std/assert@^1.0.2",
    "@std/testing": "jsr:@std/testing@^1.0.3"
  },

  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": true
  },

  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    },
    "exclude": [
      "node_modules/",
      "dist/",
      "bin/"
    ]
  },

  "fmt": {
    "lineWidth": 120,
    "indentWidth": 2,
    "singleQuote": false,
    "semiColons": true,
    "exclude": [
      "node_modules/",
      "dist/",
      "bin/"
    ]
  },

  "test": {
    "include": [
      "src/**/*_test.ts",
      "tests/**/*.ts"
    ],
    "exclude": [
      "node_modules/"
    ]
  }
}
